<?php
	error_reporting(E_ALL);
	ini_set('display_errors', '1');
	
	class Conexao{
		
	function __contruct(){
		$this->connect();
	}
	function __destruct(){
		$this->close();
	}
	function connect(){
		$link=pg_Connect("host=localhost dbname=teste user= postgres password=post123");
		return $link;
	}	
	function read($link, $query){
		$res=pg_exec($link,$query);
		for($i=0;$i<pg_numrows($res);$i++){
			$row=pg_fetch_array($res,$i);
			echo $row['hello'];
		}
	}
	function add($link, $array, $size){
		$query="";
		echo $size;
		if($size > 1){
			for($i=0;$i<$size;$i++){
				if($i==0)
					$query=$query.$array[$i];
				else
					$query=$query.",".$array[$i];
			}
			$query=$query.")";
		}else{
			$query=$array[0];
		}
		echo $query;
		
	}
	function close(){
		pg_close();
	}

	//pg_close($link);
	}
#	phpinfo();
?>
